<h2>Employees</h2>
<a href="/employees/add">Add New Employee</a>
<table>
  <tr>
    <th>Name</th><th>Position</th><th>Department</th><th>Salary</th><th>Actions</th>
  </tr>
  {{#each employees}}
  <tr>
    <td>{{this.name}}</td>
    <td>{{this.position}}</td>
    <td>{{this.department}}</td>
    <td>{{this.salary}}</td>
    <td>
      <a href="/employees/edit/{{this.id}}">Edit</a>
      <form action="/employees/{{this.id}}?_method=DELETE" method="POST" style="display:inline;">
        <button type="submit">Delete</button>
      </form>
    </td>
  </tr>
  {{/each}}
</table>
<a href="/">Back</a>
